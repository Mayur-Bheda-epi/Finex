                        </label>
                        <p>@Model.AccountNumber</p>


                    </div>
                </div>

                <div class="col-lg-6 col-md-6">
                    <div class="form-group">
                        <label>
                            <img src="~/Asset/img/card.png" class="icons">
                            Policy Number* :
                        </label>
                        <p>@Model.PolicyMasterDto.PolicyNumber</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="form-group">
