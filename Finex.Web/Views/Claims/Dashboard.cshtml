@model Finex.Dto.Dtos.DashboardViewModelDto

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="login-cntnr">
            <div class="inner-header pull-left">
                <h2 >Dashboard</h2>
            </div>


            <div class="btn-cntnr pull-right">
                <button class="btn btn-default" type="button" onclick="javascript:window.location.href='@Url.Action("Index","Claims")';">Back</button>
            </div>




            <div class="clearfix"></div>

            <br>
            <div class ="row table-responsive">
            <table class="table table-bordered table-striped myborder" id="trGv">
                <thead>
                    <tr>
                        <th>Loss Type</th>
                        <th style="text-align: center" colspan="2">Intimated</th>
                        <th style="text-align: center" colspan="2">Document Pending</th>
                        <th style="text-align: center" colspan="2">Documentation Complete</th>
                        <th style="text-align: center" colspan="2">Rejected</th>
                        <th style="text-align: center" colspan="2">Approved</th>
                        <th style="text-align: center" colspan="2">Settled</th>

                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td align="center">Number
                        </td>
                        <td align="center">Amount
                        </td>
                        <td align="center">Number
                        </td>
                        <td align="center">Amount
                        </td>
                        <td align="center">Number
                        </td>
                        <td align="center">Amount
                        </td>
                        <td align="center">Number
                        </td>
                        <td align="center">Amount
                        </td>
                        <td align="center">Number
                        </td>
                        <td align="center">Amount
                        </td>
                        <td align="center">Number
                        </td>
                        <td align="center">Amount
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.DashboardDtos)
                    {
                        <tr>
                            <td style="text-align: center">@claim.LossType</td>
                            <td style="text-align: center">@claim.InitiatedNumber
                            </td>
                            <td style="text-align: center">@claim.InitiatedAmount</td>
                            <td style="text-align: center">@claim.DocumentPendingNumber</td>
                            <td style="text-align: center">@claim.DocumentPendingAmount</td>
                            <td style="text-align: center">@claim.DocumentCompletionNumber</td>
                            <td style="text-align: center">@claim.DocumentCompletionAmount</td>
                            <td style="text-align: center">@claim.RejectedNumber</td>
                            <td style="text-align: center">@claim.RejectedAmount</td>
                            <td style="text-align: center">@claim.ApprovedNumber</td>
                            <td style="text-align: center">@claim.ApprovadAmount</td>
                            <td style="text-align: center">@claim.SettledNumber</td>
                            <td style="text-align: center">@claim.SettledAmount</td>
                        </tr>
                    }
                </tbody>
                <tr style="font-weight: bold;">
                    <td>Total</td>
                    <td style="text-align: center">@(Model.DashboardDtos.Count > 0?Model.DashboardDtos.Sum(dbo=>dbo.InitiatedNumber):0)
                            </td>
                            <td style="text-align: center">@(Model.DashboardDtos.Count > 0?Model.DashboardDtos.Sum(dbo=>dbo.InitiatedAmount):0)</td>
                            <td style="text-align: center">@(Model.DashboardDtos.Count > 0?Model.DashboardDtos.Sum(dbo=>dbo.DocumentPendingNumber):0)</td>
                            <td style="text-align: center">@(Model.DashboardDtos.Count > 0?Model.DashboardDtos.Sum(dbo=>dbo.DocumentPendingAmount):0)</td>
                            <td style="text-align: center">@(Model.DashboardDtos.Count > 0?Model.DashboardDtos.Sum(dbo=>dbo.DocumentCompletionNumber):0)</td>
                            <td style="text-align: center">@(Model.DashboardDtos.Count > 0?Model.DashboardDtos.Sum(dbo=>dbo.DocumentCompletionAmount):0)</td>
                            <td style="text-align: center">@(Model.DashboardDtos.Count > 0?Model.DashboardDtos.Sum(dbo=>dbo.RejectedNumber):0)</td>
                            <td style="text-align: center">@(Model.DashboardDtos.Count > 0?Model.DashboardDtos.Sum(dbo=>dbo.RejectedAmount):0)</td>
                            <td style="text-align: center">@(Model.DashboardDtos.Count > 0?Model.DashboardDtos.Sum(dbo=>dbo.ApprovedNumber):0)</td>
                            <td style="text-align: center">@(Model.DashboardDtos.Count > 0?Model.DashboardDtos.Sum(dbo=>dbo.ApprovadAmount):0)</td>
                            <td style="text-align: center">@(Model.DashboardDtos.Count > 0?Model.DashboardDtos.Sum(dbo=>dbo.SettledNumber):0)</td>
                            <td style="text-align: center">@(Model.DashboardDtos.Count > 0?Model.DashboardDtos.Sum(dbo=>dbo.SettledAmount):0)</td>
                </tr>
            </table>
           </div>
            <div style="height: 20px;"></div>
        </div>
    </div>
</div>
<div class="gapper"></div>



